<div style="width: 100vw; height: 100vh; display: flex; align-items: center; justify-content: center;">
  <div class="px-5 d-flex align-items-center" style="width: 440px; height: 454px; border: 1px solid #e6e6e6;">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.label :email, 'Логин',
                    class: 'form-label',
                    for:   'email',
                    style: 'font-weight: bold' %>

        <div class="input-group">
          <%= f.email_field :email,
                            autofocus:    true,
                            autocomplete: "email",
                            class:        'form-control mb-3',
                            id:           'email',
                            style:        'border-radius: 15px' %>
        </div>

        <%= f.label :password, 'Пароль',
                    class: 'form-label',
                    for:   'password',
                    style: 'font-weight: bold' %>

        <div class="input-group">
          <%= f.password_field :password,
                               autocomplete: "current-password",
                               class:        'form-control mb-4',
                               id:           'password',
                               style:        'border-radius: 15px' %>
        </div>

        <%# if devise_mapping.rememberable? %>
        <!--            <div class="field">-->
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember_me %>
        <!--            </div>-->
        <%# end %>

        <div class="text-end">
          <%= f.submit "Войти",
                       class: 'btn px-3 py-2',
                       style: 'border: 1px solid #e6e6e6; border-radius: 15px; color: white; background: red' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
