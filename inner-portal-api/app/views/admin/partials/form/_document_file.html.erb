<div class="field-unit field-unit--string">
  <div class="field-unit__label">
    <label for="">
      Файл
    </label>
  </div>
  <div class="field-unit__field">
    <% if page.resource.file.attached? %>
      <%= link_to page.resource.file.filename, rails_blob_path(page.resource.file, disposition: :attachment) %>
    <% else %>
      Отсутствует
    <% end %>
  </div>
</div>

<div class="field-unit field-unit--string">
  <div class="field-unit__label">
    <label for="">
      Загрузить файл
    </label>
  </div>
  <div class="field-unit__field">
    <%= f.file_field :file %>
  </div>
</div>
